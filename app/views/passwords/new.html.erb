<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <div class="card-header">
          <h4 class="mb-0">Nueva Contrase√±a</h4>
        </div>
        <div class="card-body">
          <%= form_with(model: @password, url: passwords_path, local: true) do |form| %>

            <% if @password.errors.any? %>
              <div class="alert alert-danger">
                <h4 class="alert-heading">Por favor corrige los siguientes errores:</h4>
                <ul>
                  <% @password.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>

            <div class="form-group my-2">
              <%= form.label :name, 'Nombre' %>
              <%= form.text_field :name, class: 'form-control' %>
            </div>

            <div class="form-group my-2">
              <%= form.label :password, 'Clave' %>
              <%= form.text_field :key, class: 'form-control' %>
            </div>

            <div class="form-group">
              <%= form.submit 'Guardar Clave', class: 'btn btn-primary my-2' %>
              <%= link_to 'Cancelar', passwords_path, class: 'btn btn-secondary' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
